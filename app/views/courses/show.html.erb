<div id="course-content">
  <h1> SHOW Course </h1>
  
  <p>
    <strong>NAME:</strong>
    <%= @course.name %> &emsp;
    <strong>Semester/Year:</strong>
    <%= @course.session %> / <%= @course.year %>
  </p>
   
  <p>
    <strong>COURSE NUMBER:</strong>
    <%= @course.number %>
  </p>
  
  <p>
    <strong>COURSE SECTION:</strong>
    <%= @course.section %>
  </p>
  
  
  
  <div style="text-align:center;">
    <h1>Assignments</h1>
  </div>
  <% if @isInstructor %>
    <div class="col-md-2 col-xs-offset-3">
      <%= link_to 'Add an Assignment', assignments_new_path(:course_num => @course.number), :class => "btn btn-primary" %>
    </div>
  <% end %>
  
  <table class = "sortable">
    <thead>
      <tr>
        <th>Assignment</th>
        <th>Due Date</th>
      
        <% if @isInstructor %>
          <th>Actions</th>
        <% end %>
        
        <th>Download Assignment</th>
        
        <% if @isInstructor %>
          <th></th>
        <% end %>
        
        <% if @isStudent %>
          <th> Submit assignment </th>
        <% end %>
      </tr>
    </thead>
    <tr>
      
      <% if (@course.assignments.size > 0) %>
        <% @course.assignments.each do |assignment| %>
          <tr onclick="location.href='<%= assignment_path(assignment) %>'">
            <td><%= assignment.name %></td>
            <td><%= assignment.due_date %></td>
            <% if @isInstructor %>
              <td style="text-align:center"> <%= link_to 'Edit', assignment_path(assignment) %></td>
            <% end %>
            
            <td><%= link_to "Download", assignment.attachment_url %></td>
            
            <% if @isInstructor %>
              <td>
                <%= button_to "Delete",  assignment, method: :delete, class: "btn btn-danger", confirm: "Are you sure that you wish to delete #{assignment.name}?" %>
              </td>
            <% end %>
          </tr>
        <% end %>
      <% end %>
    </tr>
  </table>
  
  
  <% if @isInstructor %>
    <div style="text-align:center;">
      <h1>Students</h1>
    </div>
    <div class="col-md-2 col-xs-offset-3">
      <%= link_to 'Add a Student', students_new_path(:course_num => @course.number), :class => "btn btn-primary" %>
      <%= link_to 'Import a Roster', rosters_new_path(:course_num => @course.number), :class => "btn btn-primary" %>
    </div>
    <table class = "w">
      <thead>
        <tr>
          <th>Student Name</th>
          <th>Student Email</th>
          <th></th>
          <th></th>
        </tr>
      </thead>
     
      <% @course.students.each do |student| %>
        <tr>
          <% if student.courses != nil %>
              <td><%= student.first_name %> <%= student.last_name %></td>
              <td><%= student.email %></td>
          <% end %>
              <td></td>
              <td></td>
        </tr>
        
      <% end %>
    </table>
  <% end %>
  <div style="text-align:center;">
    <%= link_to 'Back', courses_path %> &emsp;
    <% if false %> wrong must differnetiate between student and instructor <% end%>
    <%= link_to 'Home', root_path %>
  </div>
</div>
