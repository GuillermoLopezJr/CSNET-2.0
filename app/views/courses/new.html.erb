<h2> NEW COURSE </h2>

<div class="container">
  <div id="course-create-content">
    <div class="row>
      <div class="col-md-6 col-md-offset-3">
        <%= form_for :course, url: courses_path do |f| %>
        
        <% if false %>
          <p>
            <%= render 'shared/error_messages' %>
          </p>
        <% end %>

          <p>
            <%= f.label :name %>
            <%= f.text_field :name, id:"name", class: 'form-control'%>
          </p>
        
          <p>
            <%= f.label :number %>
            <%= f.number_field :number, id:"number",class: 'form-control'  %>
          </p>

          <p>
            <%= f.label :year %>
            <%= f.text_field :year, id:"name", class: 'form-control'%>
          </p>

          <p>
            <%= f.label :semester %><br>
            <%= f.collection_select :session, Course.getSessions, :strip, :strip,{ id:"session", prompt: "Select a semester", :include_blank => false}, {class: "form-control"} %>
          </p>

          <p>
            <%= f.submit 'submit', :id=>"submit", class: "btn btn-primary" %>
          </p>
          
          <p>  
            <%= link_to('Home', root_path, :method => :get) %>
          </p>

        <% end %>
      </div>
    </div>
  </div>
</div>
