<h2> NEW COURSE </h2>
<button type="button" class="btn btn-primary" data-toggle="collapse" data-target="#course-create-content">Add Course</button>
<div class="container">
  <div id="course-create-content", class= "collapse">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <%= form_for :course, url: courses_path do |f| %>
          <p>
            <%= f.label :name %>
            <%= f.text_field :name, id:"name", class: 'form-control'%>
          </p>
        
          <p>
            <%= f.label :number %>
            <%= f.number_field :number, id:"number",class: 'form-control'  %>
          </p>

          <p>
            <%= f.label :year %>
            <%= f.text_field :year, id:"name", class: 'form-control'%>
          </p>

          <p>
            <%= f.label :semester %><br>
            <%= f.collection_select :session, Course.getSessions, :strip, :strip, id:"session", prompt: true, include_blank: false %>
          </p>

          <p>
            <%= f.submit 'submit', :id=>"submit", class: "btn btn-primary" %>
          </p>
          
          <p>  
            <%= link_to 'Home', instructor_path(:show) %>
          </p>
        <% end %>
      </div>
    </div>
  </div>
</div>