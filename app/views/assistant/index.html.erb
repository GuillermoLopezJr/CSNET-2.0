<% if instructor_signed_in? %>
  <div class="container">
    <div class="row", style="text-align: center">
        <button type="button" class="btn btn-primary studentButton" data-toggle="collapse" data-target="#assistant-create-content">Add a Teaching Assistant</button>
    </div>
    <div id="assistant-create-content", class= "collapse">
      <div class="row">
          <div class="col-md-6 col-md-offset-3">
            <%= form_for :assistant, url: "/assistant" do |f| %>
              <p>
                <%= f.label :first_name %>
                <%= f.text_field :first_name, id:"first_name", class: 'form-control', :required => true%>
              </p>
            
              <p>
                <%= f.label :last_name %>
                <%= f.text_field :last_name, id:"last_name", class: 'form-control', :required => true%>
              </p>
    
              <p>
                <%= f.label :email %>
                <%= f.text_field :email, id:"email", class: 'form-control', :required => true%>
              </p>
    
              <p>
                <%= f.label :course_num %><br>
                <%= f.collection_select :course_num, @courses, :number, :number, id:"course_num", prompt: true, include_blank: false %>
              </p>
     
              <p>
                <%= f.submit 'submit', :id=>"submit", class: "btn btn-primary" %>
              </p>
            <% end %>
        </div>
      </div>
    </div>
  </div>
    
  <div id="subm-show-content">
    <table style = "width: 80%">
      <thead >
        <tr>
          <th>Course Name</th>
          <th>Assistant Name</th>
          <th>Assistant Email</th>
        </tr>
      </thead>
          <tr style="background:#DCDCDC;">
             <% @courses.each do |course| %>
                 <td id= "course_name_num"><%= course.name + (" ") + course.number.to_s %></td>
                 <td id="remove_border_line"></td>
                 <td id="remove_border_line"></td>
          </tr>
              <% course.assistants.each do |c| %>
              <tr>
                 <td></td>
                 <td style = "text-align:center"><%= c.first_name %> <%= c.last_name %></td>
                 <td style = "text-align:center"><%= c.email %></td>
              </tr>
              <% end %>
           <% end %>
    </table>
  <div style="text-align:center">
    <p>  
      <%= link_to 'Home', root_path %>
    </p>
  </div>
  </div>
<% end %>
