<div id="main-content">
<p>You are signed in,  <font size="3"><%= @instructor.email %></font>  </p>

<div id="instructor-content" >
    <!--, path-->
    <li><%= link_to "Create a Course", courses_new_path %> | <%= link_to "View Courses List", courses_path %> </li> 
    <li><%= link_to "Create an Assigment", assignments_new_path %></li>
    <li><%= link_to "View Lists of Assignments", assignments_path %></li>
    <li><%= link_to "Add a student to a course", students_new_path %></li> 
    <li><%= link_to "Upload a file to add multiple students to a course", rosters_new_path %></li> 
    <% if (@instructor.is_admin) %>
       <li><%= link_to "Add new Instructor", instructor_new_path %></li> 
    <% end %>
</div>

<h2 align="center">Courses</h2>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Number</th>
      <th>Assignment</th>
      <th>Due Date</th>
    </tr>
  </thead>
 
  <tr>
  <% @courses.each do |course| %>
      <td><%= course.name %></td>
      <td><%= link_to course.number , course_path(course) %></td>
      <td></td>
      <td></td>
    <tr>
    </tr>
    <tr>
      <% course.assignments.each do |assignment| %>
        <tr>
          <td></td>
          <td></td>
          <td><%= link_to assignment.name , assignment_path(assignment) %></td>
          <td><%= assignment.due_date %></td>
        </tr>
      <% end %>

    </tr>
    
  <% end %>
  </tr>
</table>




</div>
