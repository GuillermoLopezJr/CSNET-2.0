<h1>Instructor#new</h1>

<div class="container">
  <div id="course-create-content">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">

        <%= form_for :instructor, url: "/instructor" do |f| %>

          <p>
            <%= f.label :first_name %><br>
            <%= f.text_field :first_name, id:"first_name", class: 'form-control' %>
          </p>

          <p>
            <%= f.label :last_name %><br>
            <%= f.text_field :last_name, id:"last_name", class: 'form-control' %>
          </p>

          <p>
            <%= f.label :email %><br>
            <%= f.text_field :email, id:"email", class: 'form-control' %>
          </p>
          
          <p>
            <%= f.label :password %>
            <%= f.password_field :password, id:"password", class: 'form-control' %>
          </p>
          
          <p>
            <%= f.label :password_confirmation %>
            <%= f.password_field :password_confirmation, id:"password2", class: 'form-control' %>
          </p>
        
        
          <p>
            <%= f.submit 'submit', id:"submit", class: "btn btn-primary" %>
          </p>
          <p>  <%= link_to 'Home', root_path %> </p>
        <% end %>
        
      </div>
    </div>
  </div>
</div>
