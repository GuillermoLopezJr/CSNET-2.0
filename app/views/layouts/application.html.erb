      <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    
      <style>
        h1.page-banner {
          color: white;
          font-family: verdana;
          font-size: 400%;
          padding: 10px;
          background: maroon;
          margin-top: -20px;
        }
      </style>
      <div class="page-header">
        <h1 class="page-banner"> CSNET 2.0
            <small></small>
        </h1>
      </div> 
 </head>
  
  <body>
      <%= render 'layouts/flash_messages' %>
</div>

      <%= yield %>
        <button class="hamburger">&#9776;</button>
        <button class="cross">&#735;</button>
        <div class="menu">
          <ul>
            <li> <%= link_to('Home', root_path, :method => :get) %> </li> 
            <li> --- </li></a>
            <li> <%= link_to('Logout', destroy_instructor_session_path, :method => :delete) %> </li>
          </ul>
        </div> 
   </body>
   
   <!-- Might not be good practice to do this but having this in the js file makes it lag behind. -->
   <script>
        $( ".cross" ).hide();
        $( ".menu" ).hide();
        
        $( ".hamburger" ).click(function() {
            $( ".menu" ).slideToggle( "fast", function() {
                $( ".hamburger" ).hide();
                $( ".cross" ).show();
            });
        });
        
        $( ".cross" ).click(function() {
            $( ".menu" ).slideToggle( "fast", function() {
                $( ".cross" ).hide();
                $( ".hamburger" ).show();
            });
        });
        
   </script>
  </div>
</html>
