<h2> NEW STUDENT </h2>

<div class="container">
  <div id="student-create-content">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <%= form_for :student, url: students_path do |f| %>
          <p>
            <%= f.label :first_name %>
            <%= f.text_field :first_name, id:"name", class: 'form-control',:required => true%>
          </p>
        
          <p>
            <%= f.label :last_name %>
            <%= f.text_field :last_name, id:"name", class: 'form-control',:required => true%>
          </p>

          <p>
            <%= f.label :email %>
            <%= f.text_field :email, id:"email", class: 'form-control',:required => true%>
          </p>

          <p>
            <%= f.label :course_number %><br>
            <%= f.collection_select :course_num, @courses, :number, :number,{ id:"course_num", prompt: "Select a Course Number"}, {class: "form-control", :required => true} %>
            
            <% if false %> Get course number straight from course page
              <% if params[:course_num] != nil %>
                <%= f.text_field :course_num, value: params[:course_num], id:"course_num", class: 'form-control', disabled: true%>
              <% else %>
                <%= f.collection_select :course_num, @courses, :number, :number,{ id:"course_num", prompt: "Select a Course Number", :include_blank => false}, {class: "form-control"} %>
              <% end %>
            <% end %>
            
          </p>

          <p>
            <%= f.submit 'submit', :id=>"submit", class: "btn btn-primary" %>
          </p>
          
        <% end %>
      </div>
    </div>
  </div>
  <div style="text-align:center;">
    <%= link_to 'Back', :back %> &emsp;
    <%= link_to 'Home', root_path %>
  </div>
</div>



