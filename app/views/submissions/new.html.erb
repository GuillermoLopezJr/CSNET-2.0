<h1>Submissions#new</h1>
<div class="container">
  <div id="subm-create-content">
    <div class="row>
      <div class="col-md-6 col-md-offset-3">
        <%= form_for :submission, html: {multipart: true}, url: submissions_path do |f| %>
         <p>
            <%= f.label :name %><br>
            <%= f.text_field :name, id:"name", class: 'form-control' %>
          </p>
          
          <p>
            <%= f.label :assignment %><br>
            <%= f.collection_select :assignment, @assignments, :name, :name, id:"assignment_name", prompt: true, include_blank: false %>
          </p>
          
          <p>
            <%= f.label :attachment %>
            <%= f.file_field :attachment, id:"submission", class:"form-control"%>
          </p>
        
          <p>
            <%= f.submit 'submit', id:"submit",class: "btn btn-primary" %>
          </p>
          <p>  <%= link_to 'Home', submissions_path %> </p>
        <% end %>
        
      </div>
    </div>
  </div>
</div>
