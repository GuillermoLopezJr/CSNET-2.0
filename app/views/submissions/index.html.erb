<h1>Submissions#index</h1>

<% if @is_student %>
<div id="subm-show-content">
  <table class = "w">
    <thead >
      <tr>
        <th>Submission</th>
        <th>Course</th>
        <th>Assignment</th>
        <th>Due Date</th>
        <th></th>
        
      </tr>
    </thead>
  
    <% if (@submissions != nil) %>
      <% @submissions.each do |submission| %>
        <% @assignment = Assignment.find_by(name: submission.assignment) %>
        <tr>
          <td><%= submission.name %></td>
          
          <td><%= submission.assignment.name %></td>
         
          
          <td><%= link_to "Download", submission.attachment_url %></td>
          
        </tr>
      <% end %>
    <% end %>
</table>
<p>  
  <%= link_to 'Home', @user %>
</p>
</div>
<% end %>


<% if @is_instructor%>
<div id="subm-show-content">
  <table class = "w">
    <thead >
      <tr>
        <th>Course</th>
        <th>Student Name</th>
        <th>Assignment</th>
        <th>Due Date</th>
        <th>Status</th>
        <th>Submission</th>
      </tr>
    </thead>
  
    <% if (@submissions != nil) %>

        <tr>
           <% @courses.each do |course| %>
           <td id= "course_name_num"><%= course.name + (" ") + course.number.to_s %></td>
        </tr>
            <% @assignments.each do |assignment| %>
             <% assignment.submissions.each do |submission| %>
                <tr>
                  <td id="remove_border_line"></td>
                  <td>Jose</td>
                  <td><%= assignment.name %></td>
                  <td><%= assignment.due_date %></td>
                  <td id="ontime">Ontime</td>
                  <td><%= link_to submission.name , submission.attachment_url %></td>
                </tr>
              <% end %>
            <% end %>
        <% end %>
    <% end %>
</table>

<p>  
  <%= link_to 'Home', @user %>
</p>
</div>
<% end %>